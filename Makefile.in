VPATH=%VPATH%

CC ?= gcc
CXX ?= g++
CXXFLAGS ?=
AR ?= ar
RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC=$(shell find $(VPATH)/. -type f -name '*.rs')

CFLAGS += -fPIC

.PHONY: all
all:	libsandbox.dummy

%.o:	%.c
	$(CC) $< -o $@ -c $(CFLAGS)

libsandbox.dummy: lib.rs $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< --out-dir .
	touch $@

sandbox-test: lib.rc $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: sandbox-test
	./sandbox-test

.PHONY: clean
clean:
	rm -f *.o *.a *.so *.dylib *.dll *.dummy *-test

